<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pmprogramms.todo.LoginActivity">

    <ImageView
        android:id="@+id/icon_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/app_icon"
        android:contentDescription="@string/app_name"/>

    <EditText
        android:id="@+id/username_edit_text"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@id/icon_app"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_baseline_account_circle_24"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:autofillHints="@null"
        android:importantForAutofill="no" />


    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@id/username_edit_text"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_baseline_alternate_email_24"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:autofillHints="" />

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edit_text"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/confirm_password_edit_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit_text"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:hint="@string/confirm_password_hint"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:importantForAutofill="no" />

    <LinearLayout
        android:id="@+id/container_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_password_edit_text"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:id="@+id/accept_privacy"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:textSize="16sp"
            android:text="@string/accept_privacy"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_privacy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_login_background"
        android:text="@string/create_account"
        android:textColor="#ffffff" />

</RelativeLayout>