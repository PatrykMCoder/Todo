<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.todo.LoginActivity">

    <ImageView
        android:id="@+id/icon_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/app_icon" />

    <EditText
        android:id="@+id/username_edit_text"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@id/icon_app"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_baseline_account_circle_24"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp" />


    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@id/username_edit_text"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_baseline_alternate_email_24"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp" />

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edit_text"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp" />

    <EditText
        android:id="@+id/confirm_password_edit_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit_text"
        android:layout_centerHorizontal="true"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:id="@+id/container_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_password_edit_text"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:id="@+id/accept_checkbox"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:textSize="16sp"
            android:text="Accept privacy policy"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_privacy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_login_background"
        android:text="Create"
        android:textColor="#ffffff" />

</RelativeLayout>